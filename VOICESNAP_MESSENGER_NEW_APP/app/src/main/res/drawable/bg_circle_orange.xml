<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/app_color"/>
            <padding
                android:top="3dp"
                android:right="3dp"
                android:left="3dp"
                android:bottom="3dp"/>
            <stroke

                android:color="@color/app_color"
                android:width="1dp"/>


            <size android:height="30dp"
                android:width="30dp"/>

        </shape>
    </item>
    <item>

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid
                android:color="@color/clr_white"/>
            <padding
                android:top="3dp"
                android:right="3dp"
                android:left="3dp"
                android:bottom="3dp"/>

            <stroke

                android:color="@color/clr_white"
                android:width="0.7dp"/>
            <size android:height="30dp"
                android:width="30dp"/>

        </shape>
    </item>

</layer-list>