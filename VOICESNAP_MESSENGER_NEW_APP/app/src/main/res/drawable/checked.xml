<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/clr_parent" />
                    <gradient
                        android:startColor="@color/clr_parent"
                        android:centerColor="@color/clr_parent"
                        android:endColor="@color/clr_parent"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>


<!--            tick start-->
            <item
                android:width="3dp"
                android:height="1dp"
                android:top="14dp"
                android:left="5dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/clr_parent"/>
                    </shape>
                </rotate>
            </item>
            <!--            tick end-->

            <item
                android:width="12dp"
                android:height="1dp"
                android:top="10dp"
                android:left="4dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/clr_parent"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>