<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape>
            <stroke android:color="@color/clr_blue" android:width="2dp" />
            <solid android:color="@color/grey_rect"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_window_focused="false">
        <shape>
            <stroke android:color="@color/grey_rect" android:width="1dp"/>
            <solid android:color="@color/grey_rect"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>