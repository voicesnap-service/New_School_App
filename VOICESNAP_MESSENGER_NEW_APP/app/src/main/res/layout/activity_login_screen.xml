<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_image">


    <TextView
        android:id="@+id/lblphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginTop="@dimen/two_hundred"
        android:text="@string/txt_phone_number"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edphone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/editbg"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:maxLength="10"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/lblphone"
        app:layout_constraintStart_toStartOf="@id/lblphone"/>

    <TextView
        android:id="@+id/lblpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_password"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/twenty5_size"
        app:layout_constraintTop_toBottomOf="@id/edphone"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edpswd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/editbg"
        android:layout_centerInParent="true"
        android:password="true"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/lblpswd"
        app:layout_constraintStart_toStartOf="@id/lblpswd"/>

    <TextView
        android:id="@+id/lblfrgtpswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_forgot_password"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:padding="@dimen/dimen_five"
        android:layout_marginEnd="@dimen/sixty_size"
        app:layout_constraintTop_toBottomOf="@id/edpswd"
        app:layout_constraintEnd_toEndOf="@id/edpswd"/>

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/loginbtnbg"
        android:padding="1dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/lblfrgtpswd"
        android:textSize="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>