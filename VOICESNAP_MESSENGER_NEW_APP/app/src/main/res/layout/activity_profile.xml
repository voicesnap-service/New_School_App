<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/imgLeftArrow"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/dimen_two"
            android:layout_marginTop="@dimen/ten_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/left_whitearrowicon" />
        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_Profile"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_size"
            android:layout_marginStart="@dimen/fourty_size"
            app:layout_constraintLeft_toRightOf="@+id/imgLeftArrow"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/twenty_size" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/Firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_FirstName"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginTop="@dimen/twenty_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Actionbar" />
    <EditText
        android:id="@+id/lblFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rajeswari"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_black"
        android:textSize="@dimen/twele_size"
        android:padding="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="@+id/Firstname"
        app:layout_constraintTop_toBottomOf="@+id/Firstname"/>


    <TextView
        android:id="@+id/lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_LastName"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/twenty_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblFirstName"/>

    <EditText
        android:id="@+id/lblLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reddy"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_black"
        android:textSize="@dimen/twele_size"
        android:padding="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="@+id/lastname"
        app:layout_constraintTop_toBottomOf="@+id/lastname"/>
    <TextView
        android:id="@+id/Birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_birthday"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/twenty_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLastName"/>


    <EditText
        android:id="@+id/lblBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mm/dd/yyyy"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_black"
        android:textSize="@dimen/twele_size"
        android:padding="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="@+id/Birthday"
        app:layout_constraintTop_toBottomOf="@+id/Birthday"/>

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_Gender"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/twenty_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblBirthday"/>


    <EditText
        android:id="@+id/lblGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Female"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_black"
        android:textSize="@dimen/twele_size"
        android:padding="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="@+id/Gender"
        app:layout_constraintTop_toBottomOf="@+id/Gender"/>


    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_Email"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/twenty_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblGender"/>

    <EditText
        android:id="@+id/lblEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="google.gmailcom"
        android:textStyle="bold"
        android:textColor="@color/dark_grey_black"
        android:textSize="@dimen/twele_size"
        android:padding="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginRight="@dimen/twenty_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginTop="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Email"/>


</androidx.constraintlayout.widget.ConstraintLayout>