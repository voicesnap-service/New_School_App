<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleImageView="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegrey"
    tools:context=".Activities.CombinationHomeScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/lblTeacherCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/app_color"
            android:text="Total Student Count"
            android:textSize="@dimen/fourteen_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/colon1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="@+id/lblTeacherCount"
            app:layout_constraintStart_toEndOf="@+id/lblTeacherCount"
            app:layout_constraintTop_toTopOf="@+id/lblTeacherCount"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/lblTeacherStrength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/fourteen_size"

            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/colon1"
            app:layout_constraintStart_toEndOf="@+id/colon1"
            app:layout_constraintTop_toTopOf="@+id/colon1"
            app:layout_constraintWidth_percent="0.6" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutTeacher">

        <TextView
            android:id="@+id/staffcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Staff Count"
            android:textColor="@color/app_color"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/colon2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/staffcount"
            app:layout_constraintTop_toTopOf="@+id/staffcount"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/lblStaffCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="@+id/colon2"
            app:layout_constraintStart_toEndOf="@+id/colon2"
            app:layout_constraintTop_toTopOf="@+id/colon2"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutGirls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutStaff">

        <TextView
            android:id="@+id/girlscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Girls Count"
            android:textColor="@color/app_color"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/colon3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/girlscount"
            app:layout_constraintTop_toTopOf="@+id/girlscount"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/lblGirlsCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="@+id/colon3"
            app:layout_constraintStart_toEndOf="@+id/colon3"
            app:layout_constraintTop_toTopOf="@+id/colon3"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutBoys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutGirls">

        <TextView
            android:id="@+id/boyscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Boys Count"
            android:textColor="@color/app_color"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/colon4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boyscount"
            app:layout_constraintTop_toTopOf="@+id/boyscount"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/lblBoysCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="@+id/colon4"
            app:layout_constraintStart_toEndOf="@+id/colon4"
            app:layout_constraintTop_toTopOf="@+id/colon4"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LayoutUnspcified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutBoys">

        <TextView
            android:id="@+id/unspecified"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="UnSpecified Count"
            android:textColor="@color/app_color"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35" />

        <TextView
            android:id="@+id/colon5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"

            app:layout_constraintBottom_toBottomOf="@+id/unspecified"
            app:layout_constraintStart_toEndOf="@+id/unspecified"
            app:layout_constraintTop_toTopOf="@+id/unspecified"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.05" />

        <TextView
            android:id="@+id/lblUnSpecified"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size"
            app:layout_constraintBottom_toBottomOf="@+id/colon5"
            app:layout_constraintStart_toEndOf="@+id/colon5"
            app:layout_constraintTop_toTopOf="@+id/colon5"
            app:layout_constraintWidth_percent="0.6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rycleClassStrength"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/twenty_size"
        android:layout_marginTop="@dimen/fifteen_size"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginBottom="100dp"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@drawable/rect_solid_orange"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/adds_layout"
        app:layout_constraintTop_toBottomOf="@+id/LayoutUnspcified" />

    <include
        android:id="@+id/adds_layout"
        layout="@layout/bottom_adds_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent" />

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/activity_bottom_menus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seventy5_size"
        android:layout_marginTop="@dimen/dimen_five"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>