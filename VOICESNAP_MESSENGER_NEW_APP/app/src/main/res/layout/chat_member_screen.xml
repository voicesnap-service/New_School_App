<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleImageView="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitegrey"
    android:id="@+id/overall"
    android:padding="@dimen/ten_size">
    <RelativeLayout
        android:id="@+id/rytOverall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitegrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMember"
            android:layout_width="@dimen/fourty5_size"
            android:layout_height="@dimen/fourty5_size"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/eight_size"
            android:layout_marginEnd="@dimen/eight_size"
            android:layout_marginTop="@dimen/dimen_five"
            android:scaleType="centerCrop"
            android:src="@drawable/man"
            CircleImageView:civ_border_color="#FF000000"
            CircleImageView:civ_border_width="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/lblPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twele_size"
        android:layout_marginTop="@dimen/dimen_two"
        android:padding="@dimen/dimen_two"
        android:layout_toRightOf="@+id/imgMember"
        android:text="Voicesnap LTD"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/fourteen_size"
        app:layout_constraintLeft_toRightOf="@+id/imgMember"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/lblContentMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPersonName"
        android:layout_marginStart="@dimen/fifteen_size"
        android:padding="1dp"
        android:text="Android Text Mesage to Test"
        android:textColor="@color/clr_dark_grey"
        android:textSize="@dimen/thirteen_size"
        android:layout_toRightOf="@+id/imgMember"
        app:layout_constraintTop_toBottomOf="@+id/lblPersonName"
        app:layout_constraintLeft_toRightOf="@+id/imgMember"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/lblTiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/eighteen"
        android:text="5 am"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_two"
        android:textColor="@color/clr_txt_grey"
        android:textSize="@dimen/thirteen_size"
        android:padding="@dimen/dimen_five"
        android:visibility="gone"
        android:textStyle="normal"/>

        <ImageView
            android:id="@+id/imgChat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/eighteen"
            android:layout_marginTop="@dimen/dimen_two"
            android:layout_alignParentRight="true"
            android:textColor="@color/clr_txt_grey"
            android:visibility="visible"
            android:src="@drawable/comment_icon"
            android:padding="@dimen/dimen_five"
            android:textStyle="normal"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>