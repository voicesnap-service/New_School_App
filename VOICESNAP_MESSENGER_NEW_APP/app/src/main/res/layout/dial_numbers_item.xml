<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/DialParent"
    android:background="@color/white">

    <TextView
        android:id="@+id/lblNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_size"
        android:text="Exam Schedule"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_size"
        android:padding="20dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCall"
        app:layout_constraintTop_toTopOf="@+id/lblNumber"
        app:layout_constraintBottom_toBottomOf="@+id/lblNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/call_dial"
        android:layout_marginRight="10dp"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ten_size"
        android:background="@color/clr_dullgrey"
        app:layout_constraintEnd_toEndOf="@+id/imgFlag"
        app:layout_constraintStart_toStartOf="@+id/imgFlag"
        app:layout_constraintTop_toBottomOf="@+id/imgFlag" />

</androidx.constraintlayout.widget.ConstraintLayout>