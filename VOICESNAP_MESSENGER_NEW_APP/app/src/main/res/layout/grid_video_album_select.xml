<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view_album_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_fifty"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/frame_layout_album_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_hundred"
            android:background="#80000000"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingRight="1dp"
            android:paddingBottom="1dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/eight_size"
                android:layout_marginRight="@dimen/eight_size"
                android:layout_marginBottom="@dimen/ten_size"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_album_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:text="This is some"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/twele_size" />

                <TextView
                    android:id="@+id/gallery_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:shadowColor="#000"
                    android:shadowRadius="7.0"
                    android:text="This is some"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/fourteen_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/thirty_size"
                android:layout_height="@dimen/thirty_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/whitevideo" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

