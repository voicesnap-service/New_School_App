<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/dimen_five"
    android:padding="@dimen/ten_size"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblleave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_leavetype"
        android:textColor="@color/black"
        android:textSize="@dimen/twele_size"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_size"
        android:background="@drawable/spinnerbg"
        android:layout_marginTop="@dimen/ten_size"
        android:layout_marginRight="@dimen/dimen_two"
        android:entries="@array/Leavetype"
        app:layout_constraintTop_toBottomOf="@id/lblleave"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/lnrCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_size"
        app:layout_constraintTop_toBottomOf="@id/spin"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lblstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_startdate"
                android:textColor="@color/black"
                android:textSize="@dimen/twele_size"
                android:layout_marginStart="1dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/lblstartdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/ten_size"
                android:layout_marginBottom="@dimen/dimen_five"
                android:padding="@dimen/twele_size"
                android:background="@drawable/calendarbox"
                android:textColor="@color/clr_txtgrey_light"
                android:textSize="@dimen/fourteen_size"
                android:textStyle="normal"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty5_size"

            android:orientation="vertical">
            <TextView
                android:id="@+id/lblend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textColor="@color/black"
                android:textSize="@dimen/twele_size"
                android:layout_marginStart="@dimen/fifteen_size"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/lblenddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/ten_size"
                android:layout_marginBottom="@dimen/dimen_five"
                android:padding="@dimen/twele_size"
                android:background="@drawable/calendarbox"
                android:textColor="@color/clr_txtgrey_light"
                android:textSize="@dimen/fourteen_size"
                android:textStyle="normal"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/lblattach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_file_attach"
        android:textColor="@color/black"
        android:textSize="@dimen/twele_size"
        android:visibility="gone"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/ten_size"
        app:layout_constraintTop_toBottomOf="@id/lnrCalendar"
        app:layout_constraintStart_toStartOf="@id/lblleave"
        />

    <TextView
        android:id="@+id/lblattachfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_choose_file"
        android:background="@drawable/bg_editbox_black"
        android:textColor="@color/clr_txt_grey"
        android:textSize="@dimen/fourteen_size"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dimen_two"
        android:layout_marginTop="@dimen/ten_size"
        android:layout_marginRight="@dimen/dimen_two"
        android:padding="@dimen/ten_size"
        app:layout_constraintTop_toBottomOf="@id/lblattach"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/lbldesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_small_description"
        android:textColor="@color/black"
        android:textSize="@dimen/twele_size"
        android:textStyle="normal"
        android:layout_marginTop="@dimen/fifteen_size"
        android:layout_marginStart="@dimen/dimen_two"
        app:layout_constraintTop_toBottomOf="@id/lnrCalendar"
        app:layout_constraintStart_toStartOf="@id/lblleave"
        />
    <EditText
        android:id="@+id/edDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_fifty"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_three"
        android:layout_marginRight="@dimen/dimen_five"
        android:layout_marginTop="@dimen/twele_size"
        android:background="@drawable/bg_edittext_parent_color_change"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/ed_enter_details"
        android:inputType="textMultiLine"
        android:maxLength="460"
        android:maxLines="15"
        android:minLines="7"
        android:padding="@dimen/dimen_five"
        android:textColor="@color/dark_grey_black"
        android:textColorHint="@color/clr_grey_light"
        android:textSize="@dimen/fourteen_size"
        app:layout_constraintTop_toBottomOf="@id/lbldesc"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_size"
        android:padding="@dimen/dimen_five"
        app:layout_constraintTop_toBottomOf="@+id/edDescription"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btndiscard"
            android:layout_width="@dimen/one_twenty"
            android:layout_height="@dimen/fourty_size"
            android:background="@drawable/rectangle_edittext"
            android:text="@string/btn_Discard"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:padding="@dimen/dimen_five"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btnApply"
            android:layout_width="@dimen/one_twenty"
            android:layout_height="@dimen/fourty_size"
            android:text="@string/btn_Apply"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:padding="@dimen/dimen_five"
            style="@style/btnNext"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>