<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_image"
    tools:context=".Activities.SignInScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblLogin"
            android:layout_marginLeft="20dp"
            android:text="Phone Number"
            android:textColor="@color/clr_black"
            android:textSize="@dimen/fifteen_size"></TextView>

        <EditText
            android:id="@+id/txtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty5_size"
            android:layout_below="@+id/lblNumber"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_grey_edittextbox"
            android:hint="Phone Number"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:textSize="@dimen/fifteen_size" />

        <TextView
            android:id="@+id/lblPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPhoneNumber"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Password "
            android:textColor="@color/clr_black"
            android:textSize="@dimen/fifteen_size"></TextView>

        <RelativeLayout
            android:id="@+id/rytPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty5_size"
            android:layout_below="@+id/lblPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_grey_edittextbox">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fourty5_size"
                android:background="@drawable/rect_grey_edittextbox"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:textSize="@dimen/fifteen_size" />

            <ImageView
                android:id="@+id/imgEye"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fourty5_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/eye_invisibility" />
        </RelativeLayout>

        <TextView
            android:id="@+id/lblForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rytPassword"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Forgot Password ?"
            android:textColor="@color/clr_school"
            android:textSize="@dimen/fifteen_size"
            android:textStyle="normal"></TextView>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty5_size"
            android:layout_below="@+id/lblForgotPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rect_login"
            android:text="Log In"
            android:textColor="@color/clr_white"
            android:textSize="15dp"></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>