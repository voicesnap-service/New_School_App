<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lnrcalendar"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen_three"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/lblDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="27"
            android:textSize="@dimen/eighteen"
            android:padding="@dimen/dimen_two"
            android:layout_marginTop="20dp"
            android:gravity="top|center"
            android:textColor="@color/white"
            android:textStyle="bold"
           />
        <TextView
            android:id="@+id/lblDay"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="@dimen/fifteen_size"
            android:padding="@dimen/dimen_two"
            android:gravity="top|center"
            android:textColor="@color/white"
           />
    </LinearLayout>
    <TextView
        android:id="@+id/lblclass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Class X C"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:padding="@dimen/dimen_five"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/lblsubject"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Mathematics"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:padding="@dimen/dimen_five"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lblclass"
        app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyStudents"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/one_thirty"
            android:layout_marginRight="@dimen/dimen_five"
            android:layout_marginLeft="@dimen/dimen_five"
            android:layout_marginBottom="@dimen/dimen_eighty_size"
            app:layout_constraintBottom_toTopOf="@id/lnrBottom"
            android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/lnrBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
    <include
        android:id="@+id/incbottom"
        layout="@layout/parent_bottom_menus"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>