<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imgchat"
        android:layout_width="@dimen/thirty_size"
        android:layout_height="@dimen/thirty_size"
        android:src="@drawable/prnt_chat_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/ten_size"
        android:layout_marginBottom="@dimen/twele_size"
        android:layout_marginLeft="@dimen/thirty_size"
        android:layout_marginRight="@dimen/thirty_size"/>

    <ImageView
        android:id="@+id/imgHomeMenu"
        android:layout_width="@dimen/fourty_size"
        android:layout_height="@dimen/fourty_size"
        android:src="@drawable/prnt_group_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgchat"
        app:layout_constraintEnd_toStartOf="@id/imgSettings"
        android:layout_marginBottom="@dimen/fifteen_size"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="@dimen/thirty_size"
        android:layout_marginRight="@dimen/thirty_size"/>

    <ImageView
        android:id="@+id/imgSettings"
        android:layout_width="@dimen/thirty_size"
        android:layout_height="@dimen/thirty_size"
        android:src="@drawable/prnt_settings_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/ten_size"
        android:layout_marginBottom="@dimen/twele_size"
        android:layout_marginLeft="@dimen/thirty_size"
        android:layout_marginRight="@dimen/thirty_size"/>
</androidx.constraintlayout.widget.ConstraintLayout>