<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_size"
    android:background="@drawable/whitebg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/lblsubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifteen_size"
        android:layout_marginTop="@dimen/dimen_five"
        android:layout_marginBottom="@dimen/dimen_five"
        android:text="Mathematics"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="@dimen/fourteen_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/lblpercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/ten_size"
        android:layout_marginBottom="@dimen/dimen_five"
        android:layout_marginTop="@dimen/dimen_five"
        android:text="44%"
        android:textColor="@color/clr_bright_pink"
        android:textStyle="bold"
        android:textSize="@dimen/sixteen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
        android:id="@+id/progressLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_size"
        android:indeterminate="false"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="75"
        android:layout_marginTop="@dimen/dimen_five"
        android:layout_marginLeft="@dimen/fifteen_size"
        android:layout_marginRight="@dimen/fifteen_size"
        app:layout_constraintStart_toStartOf="@id/lblsubject"
        app:layout_constraintTop_toBottomOf="@id/lblsubject"
        />
    <TextView
        android:id="@+id/lbldetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Details"
        android:textColor="@color/clr_dark_grey"
        android:textSize="@dimen/fourteen_size"
        android:padding="@dimen/dimen_two"
        android:layout_margin="@dimen/dimen_five"
        android:gravity="right"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/progressLine"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
