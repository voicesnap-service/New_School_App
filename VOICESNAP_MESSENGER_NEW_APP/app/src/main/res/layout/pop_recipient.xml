<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fifty_eight"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/twenty_size"
            android:layout_height="@dimen/twenty_size"
            android:src="@drawable/close"
            android:layout_gravity="right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/dimen_two"
            android:layout_marginTop="@dimen/dimen_three"
            android:layout_marginRight="@dimen/fifteen_size"/>


        <TextView
            android:id="@+id/lblrecipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_size"
            android:gravity="center"
            android:padding="@dimen/dimen_five"
            android:text="@string/sections"
            android:textColor="@color/clr_school"
            android:textSize="@dimen/fifteen_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rycRecipient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sixty_size"
            android:layout_marginBottom="@dimen/dimen_eighty_size"
            android:layout_marginEnd="@dimen/fifteen_size"
            android:layout_marginStart="@dimen/fifteen_size"
            android:layout_marginLeft="@dimen/ten_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblrecipient" />
        <Button
            android:id="@+id/btnNext"
            style="@style/btnConfirm"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/fourty_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fifteen_size"
            android:text="@string/next"
            android:textAllCaps="false"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sixteen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>