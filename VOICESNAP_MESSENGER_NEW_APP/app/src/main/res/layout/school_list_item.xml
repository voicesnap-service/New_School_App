<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constSchools"
    android:background="@color/white">


    <TextView
        android:id="@+id/lblSchoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_five"
        android:padding="@dimen/dimen_five"
        android:text="School name  "
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="@dimen/thirteen_size"
        android:textStyle="normal"
        android:layout_marginRight="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="@dimen/twenty_size"
        android:layout_height="@dimen/twenty_size"
        android:layout_margin="@dimen/ten_size"
        android:src="@drawable/rightarrow_black"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/lblSchoolName"
        app:layout_constraintTop_toTopOf="@id/lblSchoolName" />

    <CheckBox
        android:id="@+id/chooseCheck"
        app:layout_constraintTop_toTopOf="@+id/lblSchoolName"
        app:layout_constraintBottom_toBottomOf="@+id/lblSchoolName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/ten_size"
        android:layout_marginTop="@dimen/ten_size"
        android:checked="false"
        android:scaleX="1.20"
        android:scaleY="1.20"
        android:visibility="gone"
        android:button="@drawable/custom_checkbox"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/ten_size"
        android:background="@color/clr_dullgrey"
        app:layout_constraintEnd_toEndOf="@+id/lblSchoolName"
        app:layout_constraintStart_toStartOf="@+id/lblSchoolName"
        app:layout_constraintTop_toBottomOf="@+id/lblSchoolName" />

</androidx.constraintlayout.widget.ConstraintLayout>