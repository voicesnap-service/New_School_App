<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/lblStandardSectionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/dimen_five"
        android:layout_marginTop="@dimen/dimen_five"
        android:layout_marginLeft="@dimen/seven_size"
        android:text="III  ssf "
        android:layout_marginRight="60dp"
        android:textColor="@color/black"
        android:textSize="@dimen/fifteen_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/ten_size"
        android:id="@+id/recycle_student_names"
        android:scrollbarSize="3dp"
        android:layout_marginLeft="10dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@drawable/rect_solid_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twenty_size"
        android:layout_marginStart="@dimen/twenty_size"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/lblStandardSectionName" />


</androidx.constraintlayout.widget.ConstraintLayout>