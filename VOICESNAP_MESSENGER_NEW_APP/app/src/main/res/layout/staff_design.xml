<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/one_thirty"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/twenty_size"
    android:padding="@dimen/ten_size"
    android:background="@drawable/whitebg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CircleImageView="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgstaff"
        android:layout_width="@dimen/sixty_size"
        android:layout_height="@dimen/sixty_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/fifteen_size"
        android:layout_marginEnd="@dimen/eight_size"
        android:layout_marginTop="@dimen/dimen_five"
        android:scaleType="centerCrop"
        android:src="@drawable/man"
        CircleImageView:civ_border_color="#FF000000"
        CircleImageView:civ_border_width="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/lblname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aravind Kumar"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_size"
        android:gravity="center"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_two"
        app:layout_constraintTop_toBottomOf="@id/imgstaff"/>
    <TextView
        android:id="@+id/lbldesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Principal"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/twele_size"
        android:layout_margin="@dimen/dimen_five"
        android:padding="@dimen/dimen_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblname"/>
</androidx.constraintlayout.widget.ConstraintLayout>
