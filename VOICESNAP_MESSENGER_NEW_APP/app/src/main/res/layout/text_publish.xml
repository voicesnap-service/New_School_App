<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegrey"
    android:padding="@dimen/dimen_two">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_five"
        android:layout_marginLeft="@dimen/dimen_five"
        android:layout_marginRight="@dimen/dimen_five"
        android:layout_marginBottom="@dimen/sixty_size"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/text_scroll" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="@dimen/two_hundred"
        android:layout_height="@dimen/fourty5_size"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/thirty_size"
        android:layout_marginRight="@dimen/thirty_size"
        android:layout_marginBottom="@dimen/ten_size"
        android:text="@string/next"
        style="@style/btnConfirm"
        android:enabled="false"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen" />
</RelativeLayout>