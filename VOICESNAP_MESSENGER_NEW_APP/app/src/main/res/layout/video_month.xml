<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/seventy5_size"
    android:layout_margin="@dimen/dimen_five"
    android:id="@+id/LayoutOverall"
    android:background="@drawable/grey_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/lblMonth"
        android:layout_width="@dimen/sixty_size"
        android:layout_height="wrap_content"
        android:text="Aug"
        android:textSize="@dimen/fourteen_size"
        android:layout_marginTop="@dimen/eight_size"
        android:padding="@dimen/dimen_two"
        android:gravity="top|center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/lblDate"
        android:layout_width="@dimen/sixty_size"
        android:layout_height="wrap_content"
        android:text="27"
        android:textSize="@dimen/sixteen"
        android:padding="@dimen/dimen_two"
        android:layout_marginTop="@dimen/dimen_five"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/lblMonth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
